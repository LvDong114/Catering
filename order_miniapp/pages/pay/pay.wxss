/* pages/pay/pay.wxss */
.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.section {
  width: 100%;
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: left;
}

.section-content {
  font-size: 16px;
  color: #333;
  text-align: left;
}

.info-text {
  display: block;
  margin-bottom: 5px;
}

.input-field {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  text-align: left;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  text-align: left;
}

.cart-item-name {
  font-size: 14px;
  color: #333;
}

.cart-item-quantity {
  font-size: 14px;
  color: #666;
}

.cart-item-price {
  font-size: 14px;
  color: #e67e22;
}

.total-amount {
  font-size: 16px;
  font-weight: bold;
  color: #e67e22;
  margin-top: 10px;
  text-align: left;
}

.pay-btn {
  background-color: #4CAF50;
  color: white;
  width: 100%;
  padding: 10px;
  border-radius: 4px;
  margin-top: 20px;
  text-align: center;
}